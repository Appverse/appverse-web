	<build>
		<defaultGoal>clean package tomcat:deploy-only </defaultGoal>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.appverse.web.framework.poms.tools.jpaddlgenerator.plugin</groupId>
					<artifactId>appverse-web-tools-jpa-ddl-generator-plugin</artifactId>
					<version>1.0.2-SNAPSHOT</version>
					<extensions>true</extensions>
					<executions>
						<execution>
							<id>generate-schema</id>
							<goals>
								<goal>generate-schema</goal>
							</goals>
						</execution>
					</executions>
					<dependencies>
						<dependency>
							<groupId>org.appverse.web.framework.modules.backend.core.persistence</groupId>
							<artifactId>appverse-web-modules-backend-core-persistence</artifactId>
							<version>1.0.2-SNAPSHOT</version>
						</dependency>
					</dependencies>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
	
	<profiles>
		<profile>
			<id>gwt</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-dependency-plugin</artifactId>
						<executions>
							<execution>
								<id>unpack-GWT-frontend</id>
								<goals>
									<goal>unpack-dependencies</goal>
								</goals>
								<phase>generate-resources</phase>
								<configuration>
									<outputDirectory>${project.build.directory}/${project.build.finalName}</outputDirectory>
									<includeGroupIds>${main.group}.${main.name}.gwtfrontend</includeGroupIds>
									<includeArtifacIds>${main.name}-gwtfrontend</includeArtifacIds>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>

		<profile>
			<id>flex</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-antrun-plugin</artifactId>
						<executions>
							<execution>
								<id>rename-swf-html</id>
								<goals>
									<goal>run</goal>
								</goals>
								<phase>prepare-package</phase>
								<configuration>
									<target name="Rename SWF">
										<move file="${project.build.directory}/${project.build.finalName}/${main.name}-flexfrontend-shell-${project.version}.swf" tofile="${project.build.directory}/${project.build.finalName}/${movie.name}.swf" />
										<move file="${project.build.directory}/war/work/wrapped-template/${main.name}-backend-${project.version}.html" tofile="${project.build.directory}/war/work/wrapped-template/${movie.name}.html" />
										<copy file="${project.build.directory}/war/work/wrapped-template/${movie.name}.html" tofile="${project.build.directory}/${project.build.finalName}/${movie.name}.html" />
									</target>
								</configuration>
							</execution>
						</executions>
					</plugin>

					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-dependency-plugin</artifactId>
						<executions>
							<execution>
								<id>unpack-blazeds-config</id>
								<goals>
									<goal>unpack-dependencies</goal>
								</goals>
								<phase>generate-resources</phase>
								<configuration>
									<outputDirectory>${project.build.directory}/${project.build.finalName}/WEB-INF/classes/flex</outputDirectory>
									<includeGroupIds>org.appverse.web.${main.name}.flexfrontend</includeGroupIds>
									<includeArtifacIds>${main.name}-flexfrontend-config</includeArtifacIds>
									<includeClassifiers>BlazeDS-Configuration</includeClassifiers>
								</configuration>
							</execution>
							<execution>
								<id>unpack-flex-frontend</id>
								<goals>
									<goal>unpack-dependencies</goal>
								</goals>
								<phase>generate-resources</phase>
								<configuration>
									<outputDirectory>${project.build.directory}/${project.build.finalName}</outputDirectory>
									<includeGroupIds>org.appverse.web.${main.name}.flexfrontend</includeGroupIds>
									<includeArtifacIds>${main.name}-flexfrontend-config</includeArtifacIds>
									<includeClassifiers>WebApp-Resources</includeClassifiers>
								</configuration>
							</execution>
						</executions>
					</plugin>

					<plugin>
						<groupId>org.sonatype.flexmojos</groupId>
						<artifactId>flexmojos-maven-plugin</artifactId>
						<executions>
							<execution>
								<id>generate-and-copy-flex-resources</id>
								<goals>
									<goal>wrapper</goal>
									<goal>copy-flex-resources</goal>
								</goals>
								<phase>generate-resources</phase>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>

		<profile>
			<id>aspectj</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>aspectj-maven-plugin</artifactId>
						<executions>
							<execution>
								<goals>
									<goal>compile</goal>
									<goal>test-compile</goal>
								</goals>
								<phase>process-sources</phase>
							</execution>
						</executions>
						<configuration>
							<aspectLibraries>
								<aspectLibrary>
									<groupId>org.appverse.web.framework.poms.modules.backend.core</groupId>
									<artifactId>appverse-web-modules-backend-core-pom</artifactId>
								</aspectLibrary>
							</aspectLibraries>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
	
