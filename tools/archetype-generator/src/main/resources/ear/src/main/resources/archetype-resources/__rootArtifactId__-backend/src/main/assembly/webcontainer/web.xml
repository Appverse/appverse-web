<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    
    <display-name>es-wkf-pbc-generics-web</display-name>
    
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
    <listener>
        <listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
    </listener> 
    <context-param>
        <param-name>log4jConfigLocation</param-name>
        <param-value>classpath:log4j.xml</param-value>
    </context-param>
    
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    
    <!-- Tiles -->
    <context-param>
        <param-name> org.apache.tiles.impl.BasicTilesContainer.DEFINITIONS_CONFIG </param-name>
        <param-value>/WEB-INF/tiles.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.apache.struts2.tiles.StrutsTilesListener</listener-class>
    </listener>
    <!-- END Tiles -->
    
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath:spring/application-config.xml</param-value>
    </context-param>
      
    <filter>
        <filter-name>struts2</filter-name>
        <filter-class>org.apache.struts2.dispatcher.ng.filter.StrutsPrepareAndExecuteFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>struts2</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <!-- Document management -->
    <servlet>
        <servlet-name>DocumentManagementRest</servlet-name>
        <servlet-class>com.sun.jersey.spi.spring.container.servlet.SpringServlet</servlet-class>
        <init-param>
            <param-name>javax.ws.rs.Application</param-name>
            <param-value>com.db.bpm.docmng.ws.rs.DocumentManagementApp</param-value>
        </init-param>
        <init-param>
            <!-- (Optional parameter) Configure a custom parametrization provider to replace the default one --> 
            <param-name>com.db.bpm.docmng.ioc.parametrization.package</param-name>
            <param-value>es.db.bpm.pbc.generics.backend.parametrization.custom</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>DocumentManagementStatic</servlet-name>
        <servlet-class>com.db.bpm.docmng.statics.servlet.WidgetResourcesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>DocumentManagementRest</servlet-name>
        <!-- do not change the url pattern -->
        <url-pattern>/document-management/rest/*</url-pattern>
    </servlet-mapping>
	
    <servlet-mapping>
        <servlet-name>DocumentManagementStatic</servlet-name>
        <!-- do not change the url pattern -->
        <url-pattern>/document-management/static/*</url-pattern>
    </servlet-mapping>
        
