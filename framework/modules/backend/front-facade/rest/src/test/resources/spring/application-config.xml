      <!-- ============================================================================================= --> 
      <!-- Dozer converter                                                        	                     --> 
      <!-- ============================================================================================= --> 
      
      <bean id="conversionService"  
      		class="org.dozer.spring.DozerBeanMapperFactoryBean"
      		p:mappingFiles="classpath*:dozer/*bean-mappings.xml"/> 


      <!-- ============================================================================================= --> 
      <!--  JSR-303 Validation                                      					                 -->
      <!-- ============================================================================================= --> 
      
      <bean id="validator" 
      		class="org.springframework.validation.beanvalidation.LocalValidatorFactoryBean" />
 

