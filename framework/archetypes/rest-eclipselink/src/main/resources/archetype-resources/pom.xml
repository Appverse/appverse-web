				<maven.skip.tests>true</maven.skip.tests>
			</properties>			
		</profile>

		<profile>
			<id>integration</id>
			<properties>
				<env>integration</env>
				<maven.skip.tests>false</maven.skip.tests>
			</properties>
		</profile>
	</profiles>
